    "module": "NodeNext", // Crucial for modern Node ESM resolution
    "moduleResolution": "NodeNext", // Crucial for modern Node ESM resolution
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./server"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}